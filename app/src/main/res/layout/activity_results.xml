<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quiz"
    tools:context="com.example.gerganzhekov.moduleevaluationquiz.ResultsActivity">

    <TextView
        android:id="@+id/grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/outOf"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="16dp"
        android:text="Congratulations"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#BDBDC3"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/outOf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="128dp"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="16dp"
        android:text="You scored 8 out of 9"
        android:textAlignment="center"
        android:textColor="#BDBDC3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/retry"
        android:layout_width="520dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp"
        android:background="#BDBDC3"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="8dp"
        android:text="Retry Quiz"
        android:textColor="@color/quiz"
        android:textSize="20sp" />

</RelativeLayout>